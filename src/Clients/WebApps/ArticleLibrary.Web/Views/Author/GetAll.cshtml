@using ArticleLibrary.Web.Models.DTO
@model List<AuthorDTO>
@{
    ViewData["Title"] = "GetAll";
}

<table class="table table-bordered">
    <tr>
        <td>Name & Surname</td>
        <td>Update Button</td>
        <td>Delete Button</td>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.NameSurname</td>
            <td>@Html.ActionLink("Update", "Update", "Author", new { Id = x.Id }, new { @class = "btn btn-primary" })</td>
            <td>@Html.ActionLink("Delete", "Delete", "Author", new { Id = x.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you want to delete this Author?')" })</td>
        </tr>
    }
</table>
<div class="text-center">
    <a href="/Author/Add" class="btn btn-primary">Add</a>
</div>

